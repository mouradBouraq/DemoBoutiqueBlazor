@using DemoBoutique.Domain.Models
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">DemoBoutique.FrontOffice</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="produits">
                <span class="oi oi-plus" aria-hidden="true"></span> Produits
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="panier">
                <span class="oi oi-list-rich" aria-hidden="true"></span>
                Panier
                <span class="badge badge-info">@panierCount</span>
            </NavLink>
        </div>
    </nav>
</div>

@code {
    [CascadingParameter]
    public CommandeModel commandeModel { get; set; } = new CommandeModel { CommandeLigneModels = new List<CommandeLigneModel>() };
    private bool collapseNavMenu = true;

    [Parameter]
    public int panierCount { get; set; } = 0;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
